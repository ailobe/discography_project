<% provide :title,  "Artists" %>
<nav class="level is-mobile">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">TOTAL ARTISTS</p>
      <p class="title">
        <%= @artists.count %>
      </p>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>
      <%= link_to "Create a new Artist", new_artist_path, class: "button is-outlined" %>
    </div>
  </div>
</nav>
<div class="section">
  <div class="container">
    <% @artists.each do |artist| %>
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-96x96">
              <img src="https://bulma.io/images/placeholders/96x96.png">
            </figure>
          </div>
          <div class="media-content">
            <p class="subtitle is-4">
              <%= link_to artist.name, artist, class: 'has-text-dark' %>
            </p>
            <span class="tag"><%= "#{artist.lps.count} LPs" %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <%= will_paginate @artists, renderer: BulmaPagination::Rails %>
  </div>
</div>
<%= will_paginate %>
