<div class="section">
  <div class="container">
    <div class="card">
      <div class="card-image">
        <figure class="image is-3bys">
          <img src="https://bulma.io/images/placeholders/720x240.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="card-content">
        <div class="content">
          <%= simple_format @object.description %>
        </div>
        <% if @object == @artist %>
        <div class="buttons has-addons">
          <span class="button is-static"><%= "#{@object.lps.count} LPs" %></span>
          <%= link_to "Record List", artist_lps_path(@object.id), class: "button is-outlined" %>
        </div>
        <% else %>
        <div class="buttons has-addons">
          <%= link_to "by #{Artist.find(@object.artist_id).name}", artist_path(@object.artist_id), class: "button is-outlined" %>
          <%= link_to "Record List", artist_lps_path(@object.artist_id), class: "button is-outlined" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
