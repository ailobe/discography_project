<div class="section">
  <div class="container">
    <% @collection.each do |object| %>
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-96x96">
              <img src="https://bulma.io/images/placeholders/96x96.png">
            </figure>
          </div>
          <div class="media-content">
            <p class="subtitle is-4">
              <% if @collection == @artists %>
              <%= link_to object.name, object, class: 'has-text-dark' %>
              <% else %>
              <%= link_to object.name,
              artist_lp_path(object.artist_id, object.id),
              class: 'has-text-dark' %>
              <% end %>
            </p>
            <% if @collection == @artists %>
            <span class="tag"><%= "#{object.lps.count} LPs" %></span>
            <% else %>
            <span class="tag"><%= "by #{Artist.find(object.artist_id).name}" %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <%= will_paginate @collection, renderer: BulmaPagination::Rails %>
  </div>
</div>
